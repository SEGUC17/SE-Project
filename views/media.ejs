<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    <!-- JS libraries -->
    <script src="./bower_components/angular/angular.js"></script>
    <link href="http://vjs.zencdn.net/vjs-version/video-js.css" rel="stylesheet">
    <!-- Angular files -->
    <style >
      img {
        max-width: 200px;
      }
    </style>
    <title></title>
  </head>
  <body>
    <% if(loggedin==true) {%>
      <p>Hello There, you have successfully reached here !</p>

      <form id="uploadForm" enctype="multipart/form-data" action="/addMedia/file/" method="post">
        <input type="file" name="ProfileImage" >
        <br>
        <input class="btn btn-primary" type="submit" name="submit" value="Upload Image" >

      </form>

      <form id="uploadForm" enctype="multipart/form-data" action="/addVideo/file/" method="post">
        <input type="file" name="ProfileVideo" >
        <br>
        <input class="btn btn-primary" type="submit" name="submit" value="Upload Video" >

      </form>

      <br>
      <div class="images">
        <% if(uploaded == true)  {%>
          <!-- <img src="<%= uploaded_image %>" alt=""> -->
        <% } else { %>
          <img src="http://im.altervista.org/alterpages/img-default.png" alt="Default image">
        <% } %>
      </div>
      <div class="row">
        <div class="image-list">
        <% for(var i=0; i<corp.images.length; i++){ %>
          <img src= <%= '/uploads/images/'+corp.images[i] %> >
        </div>
        <% } %>
    </div>

    <div class="row">
      <div class="video-list">
      <% for(var i=0; i<corp.videos.length; i++){ %>
        <video class="video-js" controls preload="auto" data-setup="{}" width="320" height="240" src= <%= '/uploads/videos/'+corp.videos[i] %> ></video>
      </div>
      <% } %>
  </div>
      <!-- <img src="ProfileImage-1491220234647.jpg" alt=""> -->
      <br>

    <% } else { %>
      <p>ERROR 404 PageNotFound</p>
    <% } %>


  </body>
</html>
